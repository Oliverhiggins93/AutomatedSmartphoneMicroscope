<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FolderBrowseActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fileBrowserTextview"
        android:gravity="center"
        android:layout_marginTop="@dimen/text_sz_scale_type"
        android:layout_marginBottom="@dimen/text_sz_scale_type">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0000000"
            android:textColor="@color/DODGERBLUE"
            android:id="@+id/filesampleNumberTextview"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textStyle="bold">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Not yet processed"
            android:id="@+id/testresult_textview"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginBottom="10dp">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date test conducted"
                android:padding="@dimen/cardview_default_radius"
                android:id="@+id/dateoftest_textview"
                android:textSize="16sp"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23/04/2021"
                android:padding="@dimen/cardview_default_radius"
                android:textSize="16sp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date analysed with model"
                android:padding="@dimen/cardview_default_radius"
                android:textSize="16sp"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not yet analysed"
                android:padding="@dimen/cardview_default_radius"
                android:id="@+id/dateanalysed_textview"
                android:textSize="16sp">
            </TextView>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient details: "
            android:padding="@dimen/cardview_default_radius"
            android:textSize="@dimen/color_picker_margin_vertical"
            android:textStyle="bold">
        </TextView>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height: "
                android:padding="@dimen/cardview_default_radius"
                android:textSize="16sp"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0cm"
                android:padding="@dimen/cardview_default_radius"
                android:id="@+id/patientheight_textview"
                android:textSize="16sp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight: "
                android:padding="@dimen/cardview_default_radius"
                android:textSize="16sp"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0kg"
                android:padding="@dimen/cardview_default_radius"
                android:id="@+id/patientweight_textview"
                android:textSize="16sp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age: "
                android:padding="@dimen/cardview_default_radius"
                android:textSize="16sp"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0kg"
                android:padding="@dimen/cardview_default_radius"
                android:id="@+id/patientweight_textview"
                android:textSize="16sp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight of feces:"
                android:padding="@dimen/cardview_default_radius"
                android:textSize="16sp"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:padding="@dimen/cardview_default_radius"
                android:id="@+id/weightfeces_textview"
                android:textSize="16sp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eggs per gram:"
                android:padding="@dimen/cardview_default_radius"
                android:textSize="16sp"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:padding="@dimen/cardview_default_radius"
                android:id="@+id/eggspergram_textview"
                android:textSize="16sp">
            </TextView>
        </LinearLayout>

        <Button
            android:id="@+id/button_detect_eggs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detect eggs"
            android:textSize="20sp">
        </Button>
        <ProgressBar
            android:id="@+id/simpleProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
    </LinearLayout>

    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_below="@id/fileBrowserTextview"
        android:id="@+id/fileBrowserList"
        android:textSize="20sp"></ExpandableListView>
</RelativeLayout>